/**
 * レイアウトマネージャが視覚効果を適用するためのパラメータです.
 */
class LayoutParams {
	[public|native]
	def new();
	
	/** 
	 * 上寄せを適用します.
	 * @return このインスタンス
	 */
	[public|native]
	def top();
	
	/**
	 * 下寄せを適用します.
	 * @return このインスタンス
	 */
	[public|native]
	def bottom();
	
	/**
	 * 左寄せを適用します.
	 * @return このインスタンス
	 */
	[public|native]
	def left();
	
	/** 
	 * 右寄せを適用します.
	 * @return このインスタンス
	 */
	[public|native]
	def right();
	
	/**
	 * 中央寄せを適用します.
	 * @return このインスタンス
	 */
	[public|native]
	def center();
	
	/**
	 * 指定の太さのボーダーを設定します.
	 * @param thick
	 */
	[public|native]
	def border(thick);
}